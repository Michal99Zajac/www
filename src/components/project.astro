---
import { Image } from 'astro:assets'

const { company, description, src, alt } = Astro.props
---

<div class="curtain-wrapper relative aspect-square w-full overflow-hidden rounded-lg bg-gray-100">
  <Image src={src} alt={alt} class="h-full w-full object-cover" />
  <div class="curtain absolute top-0 left-0 z-1 h-full bg-purple-200 p-6">
    <h3 class="font-libre mb-4 text-xl">{company}</h3>
    <p>
      {description}
    </p>
  </div>
</div>

<style is:global>
  .curtain {
    transform: translateY(-100%);
    transition: transform 0.5s ease-in-out;
  }

  .curtain-wrapper:hover .curtain {
    transform: translateY(0);
  }
</style>
