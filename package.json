  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Michal99Zajac/www.git"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "prepare": "node .husky/install.mjs",
    "format": "npm-run-all format:*",
    "format:lint": "eslint --fix './**/*.{ts,tsx}'",
    "format:prettier": "prettier --write './**/*.{ts,tsx}'",
    "format:css": "stylelint --fix './**/*.css'",
    "release": "release-it",
    "release:major": "release-it major",
    "release:minor": "release-it minor",
    "release:patch": "release-it patch",
    "generate": "npm-run-all generate:*",
    "generate:gql": "graphql-codegen --config codegen.ts -r dotenv/config"
  },
  "dependencies": {
    "@apollo/client": "^3.9.2",
    "@apollo/experimental-nextjs-app-support": "^0.8.0",
    "@next/third-parties": "^14.1.0",
    "@types/node": "^20.11.16",
    "@types/react": "^18.2.52",
    "@types/react-dom": "^18.2.18",
    "clsx": "^2.1.0",
    "dayjs": "^1.11.10",
    "envalid": "^8.0.0",
    "next": "^14.1.0",
    "react": "^18",
    "react-dom": "^18",
    "react-markdown": "^9.0.1",
    "react-use": "^17.5.0",
    "sharp": "^0.33.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.0",
    "@commitlint/config-conventional": "^18.6.0",
    "@graphql-codegen/cli": "^5.0.0",
    "@graphql-codegen/client-preset": "^4.1.0",
    "@graphql-codegen/named-operations-object": "^3.0.0",
    "@graphql-codegen/typescript": "^4.0.1",
    "@graphql-codegen/typescript-operations": "^4.0.1",
    "@graphql-codegen/typescript-react-apollo": "^4.2.0",
    "@release-it/conventional-changelog": "^8.0.1",
    "autoprefixer": "^10.4.17",
    "dotenv": "^16.4.2",
    "eslint": "^8",
    "eslint-config-next": "14.1.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-tailwindcss": "^3.14.1",
    "graphql-codegen-typescript-validation-schema": "^0.12.1",
    "husky": "^9.0.10",
    "lint-staged": "^15.2.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8",
    "prettier": "^3.2.4",
    "release-it": "^17.0.3",
    "stylelint": "^16.2.1",
    "stylelint-config-standard": "^36.0.0",
    "stylelint-config-tailwindcss": "^0.0.7",
    "tailwindcss": "^3.4.1",
    "typescript": "^5"
  },
  "lint-staged": {
    "./**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "./**/*.css": [
      "stylelint --fix"
    ]
  }
}
